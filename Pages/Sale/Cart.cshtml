@page
@model CartModel
@{
    ViewData["Title"] = "Your Cart";
}

<h2>Your Cart</h2>
@if (Model.CartItems.Any())
{
    <table class="cart-table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td><img class="cart-pic" src="@item.ImageUrl" alt="@item.FoodName" /></td>
                    <td>@item.FoodName</td>
                    <td>$@item.Price</td>
                    <td>
                        <form method="post" asp-page-handler="ChangeQuantity" asp-route-id="@item.FoodId">
                            <div class="input-group">
                                <button type="submit" name="action" value="decrease" class="btn btn-sm btn-danger">-</button>
                                <input type="number" class="form-control" name="quantity" value="@item.Quantity" min="1" />
                                <button type="submit" name="action" value="increase" class="btn btn-sm btn-primary ml-1">+</button>
                                <!-- Added margin class "ml-1" to the plus symbol button -->
                            </div>
                        </form>
                    </td>
                    <td>$@(item.Price * item.Quantity)</td>
                    <td>
                        <form method="post" asp-page-handler="RemoveFromCart" asp-route-id="@item.FoodId">
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4"></td>
                <td>Total: $@(Model.CartItems.Sum(item => item.Price * item.Quantity).ToString("0.00"))</td>
                <td></td>
            </tr>
        </tfoot>
    </table>
    <form method="post" asp-page-handler="ClearCart">
        <button type="submit" class="btn btn-danger">Clear Cart</button>
    </form>
    <a asp-page="/Sale/Checkout" class="btn btn-primary">Proceed to Checkout</a>
}
else
{
    <p>Your cart is empty.</p>
}
