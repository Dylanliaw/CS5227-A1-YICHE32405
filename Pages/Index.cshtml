@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="path/to/styles.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="title">Welcome to Dylan's Imperial Wok</h1>
                <p class="lead">Where tradition meets taste</p>
                
            </div>
        </div>

        <!-- Special Offer Foods Section -->
        <div class="row mt-5">
            <div class="col-lg-12 text-center">
                <h2 class="title">Special Offer Foods</h2>
                <div class="menu-container">

                    @foreach (var specialOffer in Model.SpecialOffers)
                    {
                        <div class="menu-item card">
                            <div class="menu-img-container">
                                <img class="menu-img" src="@specialOffer.ImageUrl" alt="@specialOffer.FoodName" />
                            </div>
                            <div class="menu-details card-body">
                                <div class="menu-name card-title">@specialOffer.FoodName</div>
                                <div class="menu-description card-text">@specialOffer.Description</div>
                                    <a href="/Sale/Shop" class="btn btn-primary">Order Now</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Direct Users to Menu Page -->
        <div class="row mt-5">
            <div class="col-lg-12 text-center">
                <h2 class="title">Explore Our Full Menu</h2>
                <p class="lead">Check out our complete menu with a variety of delicious dishes.</p>
                <a href="/Sale/Shop" class="btn btn-secondary btn-lg">View Menu</a>
            </div>
        </div>
    </div>
</body>
</html>
