@page
@model CS5227_A1_YICHE32405.Pages.Contact.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<h2>Contact</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="Customer.Fullname"></label>
        <input asp-for="Customer.Fullname" class="form-control" />
        <span asp-validation-for="Customer.Fullname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.Email"></label>
        <input asp-for="Customer.Email" class="form-control" />
        <span asp-validation-for="Customer.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.PhoneNumber"></label>
        <input asp-for="Customer.PhoneNumber" class="form-control" />
        <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.Message"></label>
        <textarea asp-for="Customer.Message" class="form-control"></textarea>
        <span asp-validation-for="Customer.Message" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<!-- Google Maps -->
